wb = xlsx_package.workbook
wb.add_worksheet(name: "Assigned Patients") do |sheet|
  title = sheet.styles.add_style(sz: 12, b: true, alignment: {hosizontal: :center})
  sheet.add_row(['First Name', 'Last Name', 'DOB', 'Medicaid ID', 'Agency', "#{@sender.receiver_name} Disenrollment Reason", 'Disenrollment Date'])
  @patient_referrals.each do |pr|
    sheet.add_row([pr.first_name, pr.last_name, pr.birthdate, pr.medicaid_id, pr.assigned_agency&.name, pr.stop_reason_description, pr.actual_or_pending_disenrollment_date])
  end
end