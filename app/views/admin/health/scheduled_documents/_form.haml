.row
  .col-7
    = f.input :name
  .col-2
    %label &nbsp;
    = f.input :active, as: :pretty_boolean
  .col-3
    = f.input :scheduled_hour, as: :select_two, collection: @scheduled_document.available_hours
.row
  .col-2
    = f.input :protocol, as: :select_two, collection: @scheduled_document.available_protocols
  .col-8
    = f.input :hostname
  .col-2
    = f.input :port
.row
  .col-6
    = f.input :username
  .col-6
    = f.input :password
.row
  .col
    = f.input :file_path

= render @scheduled_document, f: f