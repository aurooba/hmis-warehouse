- if @patient.present?
  - if @patient.anything_expiring?
    %div.alert.alert-warning
      %i.alert__icon.icon-warning
      %ul
        - if @patient.release_status.present?
          %li= @patient.release_status
        - if @patient.cha_status.present?
          %li= @patient.cha_status
        - if @patient.ssm_status.present?
          %li= @patient.ssm_status
        - if @patient.careplan_status.present?
          %li= @patient.careplan_status
