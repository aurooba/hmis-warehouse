- title = "MassHealth Behavioral Health Community Partners Program"
- content_for :title, title
- not_provided = '<span class="no-data">Not provided</span>'.html_safe

.l-print.coverSheet
  .l-print__section
    %h1= title

  - if ENV['CAREPLAN_LOGO'].present?
    %div{style: "text-align:center;"}
      = image_tag(inline_asset_base64("theme/logo/#{ENV['CAREPLAN_LOGO']}"), style: 'width: 70%;')

  %div.l-print__section
    %div{style: "margin-bottom: 8px; margin-top: 30px;"}
      %strong Name of Behavioral Health Community Partner:
    %div Boston Coordinated Care Hub

  %p.muted.l-print__section
    This document is a
    %b Person-Centered Treatment Plan
    prepared by Boston Coordinated Care Hub, a BH CP that works with ACOs
    and MCOs to provide care management and coordination to MassHealth members with complex behavioral health conditions.
    This document summarizes a member's Comprehensive Assessment and conveys important information including the member's
    preferences, needs, goals, and plans to achieve prioritized goals.

  %article.l-print__section.health__care-hub-note
    .l-print__section.health__care-hub-note__content
      %div{style: 'padding-bottom: 8px;'}
        %strong
          %u ACTION REQUIRED:
      If you are the patient's PCP, please review and provide your signature on the signature page.
  
  .coverSheet__details
    %div{style: 'margin-bottom: 20px;'}
      %p.muted
        %i Client Details
      %p
        %strong Name of Member:
        = @patient.name&.presence || not_provided
      %p
        %strong Member MassHealth ID:
        = @patient.medicaid_id&.presence || not_provided
      %p
        %strong Member DOB:
        = @patient.birthdate&.to_date || not_provided
    %div
      %p.muted
        %i For questions, contact:
      %p
        %strong Care Coordinator:
        = @patient.care_coordinator&.name&.presence || not_provided
      %p
        %strong Email:
        = @patient.care_coordinator&.email&.presence || not_provided
      %p
        %strong Phone:
        = @patient.care_coordinator&.phone&.presence || not_provided
