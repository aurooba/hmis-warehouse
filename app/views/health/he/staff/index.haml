- content_for :title, "Staff Members"

.row
  .col-sm-8
    %h1= content_for :title
  .col-sm-4.text-right.mb-4
    = link_to new_health_he_case_staff_path(@case), class: 'btn btn-primary' do
      %span.icon-plus
      Add A Staff Member

.row
  .col-sm
    %table.table
      %thead
        %tr
          %th Name
          %th Site
          %th Date Interviewed
          %th
      %tbody
        - @staffs.each do |staff|
          %tr
            %td= link_to "#{staff.first_name} #{staff.last_name}", edit_health_he_case_staff_path(@case, staff)
