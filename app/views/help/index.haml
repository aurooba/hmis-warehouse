- content_for :title, 'All Help'
.d-flex
  %h1= content_for :title
  = turbo_frame_tag 'new_help_link', class: 'ml-auto' do
    = link_to new_help_path, class: 'btn btn-primary ml-auto', data: { turbo_frame: 'new_help' } do
      %i.icon-plus
      Create a Help Document
= turbo_frame_tag 'new_help'
- if @pagy.count.positive?
  = render 'common/pagination_top', items: 'document'
  .card
    %table.table.table-striped
      %thead
        %tr
          %th Document
          %th Linked From
          %th External?
          %th Last Updated
          %th
      %tbody
        - @help.each do |help|
          %tr
            %td
              = turbo_frame_tag "help_#{help.id}" do
                = link_to help.title.presence || 'External', edit_help_path(help)
            %td
              Section:
              = help.controller_path
              %br
              Page:
              = help.action_name
            %td= checkmark(help.external?)
            %td= help.updated_at
            %td
              = link_to help_path(help), method: :delete, class: 'btn btn-danger btn-sm btn-icon-only', data: { confirm: 'Are you sure you want to delete this help document?'} do
                %i.icon-cross
      = render 'common/pagination_bottom', items: 'document'

- else
  .text-center
    .none-found.mb-4 No help on file.
    %p
      = link_to new_help_path, class: 'btn btn-primary' do
        %i.icon-plus
        Create a Help Document
