.row.flex-wrap
  .col-md-6.col-lg-3
    %h4.mt-0 Dates
    %dl.mr-4
      %dt Dates of Period
      %dd= @report.date_range_words
    - if @report.include_comparison?
      %dl.mr-4
        %dt Dates of Comparison Period
        %dd= @comparison.date_range_words

  .col-md-6.col-lg-3
    %h4.mt-0 Projects
    %dl.mr-4
      %dt CoC Codes
      %dd
        - if @report.chosen_coc_codes.blank?
          All
        - else
          = @report.chosen_coc_codes
    %dl.mr-4
      %dt Project Types
      %dd
        - if @report.chosen_project_types.blank?
          All
        - else
          - @report.chosen_project_types.each do |type|
            .project-type= type
    %dl.mr-4
      %dt Data Sources
      %dd
        - if @report.data_source_names.blank?
          All
        - else
          - @report.data_source_names.each do |ds|
            .data-source= ds
    %dl.mr-4
      %dt Organizations
      %dd
        - if @report.organization_names.blank?
          All
        - else
          - @report.organization_names.each do |type|
            .organization= type
    %dl.mr-4
      %dt Projects
      %dd
        - if @report.project_names.blank?
          All
        - else
          - @report.project_names.each do |type|
            .project= type

  .col-md-6.col-lg-3
    %h4.mt-0 Household
    - if @filter.hoh_only
      %dl.mr-4
        %dt Clients Limited
        %dd Counting only Heads of Households
    %dl.mr-4
      %dt Household Type
      %dd= @report.chosen_household_type
    %dl.mr-4
      %dt Ages
      %dd
        - if @report.chosen_age_ranges.blank?
          Any
        - else
          = @report.chosen_age_ranges
    %dl.mr-4
      %dt Veteran Statuses
      %dd
        - if @report.chosen_veteran_statuses.blank?
          Any
        - else
          - @report.chosen_veteran_statuses.each do |status|
            .status= status
    %dl.mr-4
      %dt Genders
      %dd
        - if @report.chosen_genders.blank?
          All
        - else
          - @report.chosen_genders.each do |gender|
            .gender= gender

  .col-md-6.col-lg-3
    %h4.mt-0 Demographics
    %dl.mr-4
    %dt Sub-Population
    %dd= @report.chosen_sub_population
    %dl.mr-4
    %dt Races
    %dd
      - if @report.chosen_races.blank?
        All
      - else
        - @report.chosen_races.each do |race|
          .race= race
    %dl.mr-4
    %dt Ethnicities
    %dd
      - if @report.chosen_ethnicities.blank?
        All
      - else
        - @report.chosen_ethnicities.each do |ethnicity|
          .ethnicity= ethnicity
