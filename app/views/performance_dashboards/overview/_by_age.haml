.row
  .col-sm-6
    %h2 Entering
    = link_to "Total #{@report.entering.pluck(:id, :age).uniq.count}", details_performance_dashboards_overview_index_path(filter_params.merge(options: {key: :entering})), data: {loads_in_pjax_modal: true}
    %dl
      - @report.entering_by_age.each do |bucket, ids|
        %dt= bucket.to_s.humanize
        %dd= ids.count

  .col-sm-6
    %h2 Exiting
    = "Total #{@report.exiting.count}"
    %dl
      - @report.exiting_by_age.each do |bucket, ids|
        %dt= bucket.to_s.humanize
        %dd= ids.count
