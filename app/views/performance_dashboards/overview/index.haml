- @layout__plain_inner = true
- @layout__width = 'lg'
.content-outer-prs1
  %nav.nav-drawer.prs1
    = render 'performance_dashboards/filter_controls/sidebar'
  .main-outer-prs1
    .utility-prs1
      = render '/warehouse_reports/breadcrumbs', tab: 'performance'
      = render "utility"
    .top-nav-prs1
      .d-flex
        .mr-auto
          %h1.mb-4 #{@report.performance_type} Performance
          = render 'hero_counts'
        .ml-2.mb-2
          = render 'performance_dashboards/pdf_download', export: @pdf_export
          .mr-auto.mt-2= render 'disaggregation_picker'
    .main-inner-prs1
      = render 'disaggregations'
