- @layout__plain_inner = true
- @layout__width = 'lg'
.content-outer-prs1
  %nav.nav-drawer.prs1
    = render 'performance_dashboards/filter_controls/sidebar'
  .main-outer-prs1
    .utility-prs1
      = render '/warehouse_reports/breadcrumbs', tab: 'performance'
      = render "utility"
    .top-nav-prs1
      .d-flex.mb-5
        .mr-auto
          %h1 #{@report.performance_type} Performance
        .ml-3
          = render 'performance_dashboards/pdf_download', export: @pdf_export
      %div
        %div(style='margin-bottom: 2em')= render 'universe_selection'
        .mb-4= render 'hero_counts'
    .main-inner-prs1
      .mr-auto.mt-2= render 'disaggregation_picker'
      = render 'disaggregations'
