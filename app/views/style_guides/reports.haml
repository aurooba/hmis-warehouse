
:scss
  .c-indicator {
    min-height: 75px;
    margin: 0 auto;
  }
  .c-indicator--constrained-width {
    min-width: 300px;
    max-width: 500px;
    margin: 0 auto;
  }
  .c-indicator__title {
    font-weight: bold;
    margin-bottom: 10px;
  }
  .c-indicator__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .c-indicator__passed {
    margin-right: 50px;
    span {
      font-size: 35px;
    }
    &.pass {
      color: green;
    }
    &.fail {
      color: red;
    }
  }
  .c-indicator__values {
    display: flex;
    align-items: flex-end;
  }
  .c-indicator__value {
    margin-right: 10px;
  }
  .c-indicator__change-icon {
    margin-left: 10px;
    margin-right: 10px;
    svg,
    .icon-svg {
      width: 2.5rem;
      height: 2.5rem;
    }
  }
  .c-indicator__value-number {
    font-size: 40px;
    font-weight: bold;
    line-height: 1;
  }
  .c-indicator__value-unit {
    font-weight: bold;
    font-size: 20px;
    line-height: 1;
  }
  .c-indicator__value--secondary {
    .c-indicator__value-number {
      font-size: 20px;
      font-weight: bold;
    }
    .c-indicator__value-unit {
      font-size: 16px;
    }
  }
  .c-indicator__label {
    font-size: 15px;
    line-height: 16px;
  }

%h1.mb-4 CoC indicator comparison table

:ruby
  indicator_levels = ["System-Level Indicators", "Project-Level Indicators"]
%table.table.c-table--indicator
  %thead
    %th.blank{style: "width: 15%"}
    - indicator_levels.each do |level|
      %th{style: "width: #{85.0/indicator_levels.length.to_f}%"}=level
  %tbody
    - @indicator_groups.each_with_index do |group, i|
      %tr.c-table__row{class: "c-table__row--highlight-#{i+1}"}
        %th.level{style: "width: 15%"}
          .h2=group[:title]
          %p.font-weight-normal=group[:description]
        %td.p-0{colspan: 2, style: "width: 85%"}
          %table.table
            - indicators = group[:indicators]
            - indicators.each do |indicator_set|
              %tr
                - indicator_set.each do |indicator|
                  %td{colspan: indicator_set.one? ? indicator_levels.length : 1 }
                    = render "hud_reports/indicator", indicator: indicator, constrain_width: indicator_set.one?
