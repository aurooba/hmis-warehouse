- title = "Active #{GrdaWarehouse::WarehouseReports::Dashboard::Base.available_sub_populations.invert[@sub_population]} Entry Detail"
- content_for :title, title
= render '/warehouse_reports/breadcrumbs'
.row
  .col-sm-8
    %h1= title

= render 'filter'

.d-flex
  %p
    = pluralize(@enrollments.count, 'Client')
    have entries in
    = @filter.selected_project_type_names.join(', ')
    between
    = @filter.start
    and
    = "#{@filter.end}."
    %br
    This report was built to provide supporting details to the "Enterers" section of the Population Dashboards.
  .ml-auto.mb-2
    - if  can_view_clients?
      = link_to({format: :xlsx}.merge(link_params),{class: 'btn btn-secondary'}) do
        Download Excel
= render 'common/population_warnings'
= render 'warehouse_reports/limited_by_project_note'

- @buckets.each do |group, clients|
  .row.mb-1
    .col-sm-12
      %h3
        = @data[group][:label]
        = "(#{clients.count})"
      %table.table
        %thead
          %tr
            %th
              Client
            %th
              Entry
            %th
              Exit
            %th
              Project Type
            %th
              Project
            %th
              Organization
        %tbody
          - clients.each do |client_id|
            - meta = @enrollments[client_id].first
            - enrollments = @enrollments[client_id]
            %tr
              %td{rowspan: enrollments.count + 1}
                = link_to_if can_view_clients_or_window?, "#{meta[:first_name]} #{meta[:last_name]}", appropriate_client_path(client_id)
            - enrollments.each_with_index do |enrollment, index|
              - highlight = ''
              - highlight = 'warehouse-reports__enrollment-highlighted' if index == 0
              %tr{class: highlight}
                %td
                  = enrollment[:first_date_in_program]
                %td
                  = enrollment[:last_date_in_program]
                %td
                  = HUD.project_type(enrollment[:project_type])
                %td
                  = enrollment[:project_name]
                %td
                  = enrollment[:organization_name]
