.d-flex
  .pt-2!= pagy_info(@pagy, item_name: _('client').pluralize(@pagy.count))
  .ml-auto!= pagy_bootstrap_nav(@pagy) if @pagy.count.positive?
- if @pagy.count.positive?
  %table.table.table-striped
    %thead
      %tr
        %th
          Client ID
        %th
          Client Name
    %tbody
      - @clients.each do |source_client|
        - client = source_client.destination_client
        %tr
          %td= client.id
          %td= link_to_if can_view_clients?, source_client.name, appropriate_client_path(client.id)
