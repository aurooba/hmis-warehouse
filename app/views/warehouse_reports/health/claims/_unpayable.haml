.row
  .col-sm-6
    = render 'health/qualifying_activities/payability_key'
  .col-sm-6.text-right
    = f.submit 'Update Qualifying Activities', class: "btn btn-primary"

- qa_group.each do |_, qas|
  .row.mt-4
    - sample_qa = qas.first
    - client_id = sample_qa.patient.client_id
    - included_unpayable_qas = qas.reject(&:ignored)
    - content_for :panel_collapse_content, flush: true do
      %p= link_to sample_qa.patient.medicaid_id, polymorphic_path(careplans_path_generator, client_id: sample_qa.patient.client_id)
      %table.table.table-sm.table-striped.table-hover.mt-4
        %thead
          %tr
            %th Date
            %th Staff
            %th Source
            %th Activity
            %th Mode of Contact
            %th Client Reached
            %th Procedure Code
            %th.nobr Force Payable?
            %th.text-center Ignore?
        %tbody
          = render 'unpayable_rows', qas: included_unpayable_qas, f: f
          = render 'unpayable_rows', qas: qas.select(&:ignored), f: f
    = render 'common/panel_collapse', id: "client-#{client_id}", title: "#{sample_qa.patient.name}", default_open: if included_unpayable_qas.count.positive? then 'yes' else 'no' end

