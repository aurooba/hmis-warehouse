.card
  %table.table.table-striped
    %thead
      %tr
        %th Start Date
        %th End Date
        %th Status
        %th Run On
        %th Delete
    %tbody
      - @reports.each do |report|
        %tr
          %td= report.start_date.to_date
          %td= report.end_date.to_date
          %td= link_to_if report.completed?, report.status, warehouse_reports_health_encounter_path(report, format: :xlsx)
          %td= report&.completed_at&.to_date
          %td
            = link_to warehouse_reports_health_encounter_path(report), method: :delete, class: 'btn btn-danger btn-sm btn-icon-only', data: {confirm: "Are you sure you want to delete this report?"} do
              %i.icon-cross
