              = data.housed.count
        %tr
          %td
            Moved to Inactive
          %td.text-right
            = link_to details_built_for_zero_report_warehouse_reports_bfz_index_path(params: { report: report_params.merge(key: :inactive) }), class: 'btn btn-secondary btn-sm', data: { loads_in_pjax_modal: true } do
