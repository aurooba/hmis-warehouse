.row
  .col
    %h2 Actively Homeless
.row
  .col
    %table.table.table-striped
      %tbody
        %tr
          %td
            = "#{population}"
          %td.text-right
            = link_to details_built_for_zero_report_warehouse_reports_bfz_index_path(params: { report: report_params.merge(key: :actively_homeless) }), class: 'btn btn-secondary btn-sm', data: { loads_in_pjax_modal: true } do
              = data.actively_homeless.count
.row
  .col
    %h2 Length of Time from Identification to Housing
.row
  .col
    %table.table.table-striped
      %tbody
        %tr
          %td
            = "For #{population}"
          %td.text-right
            = link_to details_built_for_zero_report_warehouse_reports_bfz_index_path(params: { report: report_params.merge(key: :lot_to_housing) }), class: 'btn btn-secondary btn-sm', data: { loads_in_pjax_modal: true } do
              = pluralize(data.average_lot_to_housing, 'days')
