= simple_form_for @report, url: url_for, as: :f, method: :get do |f|
  - content_for :filters_col_full do
    - f.object.available_filters.in_groups_of(4, false).each do |row|
      .row
        - row.each do |filter|
          .col-sm-3
            = f.input filter, collection: @report.filter_options(filter), include_blank: '(all)'
    .row
      .col-sm-12
        = f.submit 'Update Report', class: 'btn btn-primary mt-no-label'
  = render 'warehouse_reports/filters', f:f, submit_button: nil
