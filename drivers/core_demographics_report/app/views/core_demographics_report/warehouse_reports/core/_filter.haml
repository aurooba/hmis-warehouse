= simple_form_for @filter, as: :filters, url: core_demographics_report_warehouse_reports_core_index_path, method: :get do |f|
  - content_for :filters_col_full do
    .row
      .col-sm-3
        = f.input :start, as: :date_picker, label: 'Start', input_html: { value: @filter.start }
      .col-sm-3
        = f.input :end, as: :date_picker, label: 'End'
      .col-sm-6
        = f.input :coc_codes, collection:  @filter.coc_code_options_for_select(user: current_user), input_html: {class: :select2, multiple: true, data: {placeholder: 'All' }}, include_blank: false, label: 'CoCs'
    .row
      .col-sm-8
        = f.input :comparison_pattern, as: :boolean_button_group, collection: CoreDemographicsReport::Core.comparison_patterns, label: 'Comparison Pattern', include_blank: false
    .row
      .col-sm-6
        = f.input :project_ids, as: :grouped_select, group_method: :last, collection: @filter.project_options_for_select(user: current_user), input_html: {class: :select2, multiple: true, data: {placeholder: 'All' }}, include_blank: false, label: 'Projects'
      .col-sm-6
        = f.input :project_group_ids, collection: @filter.project_groups_options_for_select(user: current_user), input_html: {class: :select2, multiple: true, data: {placeholder: 'All' }}, include_blank: false, label: 'Project Groups'


  - content_for :filter_actions do
    = f.submit 'Update', class: ['btn', 'btn-primary']

  = render 'warehouse_reports/filters', f:f
