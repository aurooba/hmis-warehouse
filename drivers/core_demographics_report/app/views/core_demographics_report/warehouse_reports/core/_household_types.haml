- reports = [@report]
- column_class = 'col-sm-8'
- if @report.include_comparison?
  - reports << @comparison
  - column_class = 'col-sm-6'
.row
  - reports.each_with_index do |report, index|
    - comparison_class = ''
    - if reports.count > 1
      - comparison_class = "c-swatch__border-left--td-#{index}"
    %div{class: column_class}
      %h3 Household Types
      %p Household type counts count Heads of Household in each type.
      .card.mb-4{class: comparison_class}
        %table.table
          %thead
            %tr
              %th Type
              %th Count
              %th Percentage
          %tbody
            - @filter.available_household_types.each do |title, id|
              %tr
                %th= title
                %td= number_with_delimiter(report.household_type_count(id))
                %td= number_to_percentage(report.household_type_percentage(id), precision: 2)
