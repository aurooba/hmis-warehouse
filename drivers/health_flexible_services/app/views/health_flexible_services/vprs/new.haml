= render 'clients/breadcrumbs'
- title = 'Add A Flexible Service Verification Form'
= content_for(:title, title)
.o-page
  .o-page__header
    %h1= "#{content_for(:title)} for #{@client.full_name}"
  .o-page__content
    = simple_form_for @vpr, as: :vpr, url: client_health_flexible_services_vprs_path(@client) do |f|
      = render 'form', f: f
      = f.button :submit, value: 'Add Flexible Services'
