            {
              "type": "MAX",
              "question": "project-end"
            },
            {
              "type": "MAX",
              "question": "2.07.2"
            }
          ]
        },
        {
          "type": "DATE",
          "required": false,
          "link_id": "2.07.2",
          "text": "End Date",
          "field_name": "inventoryEndDate",
