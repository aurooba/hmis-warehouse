- if @pagy.count.positive?
  = render 'common/pagination_top', item_name: 'error'
  .table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th Error
          %th HUD ID
      %tbody
        - errors.each do |error|
          %tr
            %td= error.details
            - source = error.source
            %td= source.public_send(source.class.hud_key) if source.present?
  = render 'common/pagination_bottom', item_name: 'error'
- else
  .none-found No errors found.
