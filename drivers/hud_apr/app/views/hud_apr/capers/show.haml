= render 'breadcrumbs'
- content_for :title, @generator.title
%header.mb-3
  %h1= content_for :title
= render 'hud_apr/shared/beta_warning'
- if @show_recent
  .well
    .d-flex
      %h2 CAPER Report
      .ml-auto
        = link_to({format: :zip},{class: 'btn btn-primary'}) do
          %span.icon-download2
          Download Zip File

    = render 'questions'
.text-right
  = link_to 'Generate New Full CAPER', edit_hud_reports_caper_path(@report, generator: @generator_id), class: 'btn btn-secondary'

- if @reports.present?
  %p= paginate @reports
.jReportListing
  = render 'hud_apr/shared/reports'

= render 'hud_apr/shared/list_refresher'
