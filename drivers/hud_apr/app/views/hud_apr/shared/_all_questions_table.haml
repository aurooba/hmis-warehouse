%table.table.table-hover.table-striped
  - @generators.each do |generator|
    %thead
      %th Question
      %th Last Run
      %th Status
    %tbody
      - generator.questions.each do |name, klass|
        %tr
          - answer = klass.most_recent_answer(user: current_user, report_name: report_name)
          %td
            = link_to name, path_for_question(report_id: answer&.report_instance || 0, id: name)
          %td
            = answer&.created_at
            - if answer&.user
              by #{answer.user.name}
          %td
            = answer&.status
            - if answer&.completed?
              in #{answer&.completed_in}
