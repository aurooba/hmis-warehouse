- reports = [@report]
- column_class = 'col-sm-8'
- if @report.include_comparison?
  - reports << @comparison
  - column_class = 'col-sm-6'
%h3 Leaver Non-Cash Benefits Sources at Last Update
.row
  - reports.each_with_index do |report, index|
    - comparison_class = ''
    - if reports.count > 1
      - comparison_class = "c-swatch__border-left--td-#{index}"
    %div{class: column_class}
      .card.mb-4{class: comparison_class}
        %table.table.table-striped.mb-0
          %thead
            %th
            %th Count
            %th Percent
          %tbody
            - report.leaver_non_cash_sources_data.each do |key, row|
              %tr
                %th
                  %i.icon-info{data: {toggle: :tooltip, title: row[:description]}}
                  = row[:title]
                %td= link_to_if(row[:scope], number_with_delimiter(row[:count]), details_income_benefits_report_warehouse_reports_report_path(report, key: key, comparison: index.positive?))
                %td= percentage(row[:percent], format: '%1.0f%%') unless row[:percent].nil?
