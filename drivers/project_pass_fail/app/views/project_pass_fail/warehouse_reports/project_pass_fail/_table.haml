.warehouse-reports__ad_hoc-export
  - if @reports.exists?
    .row
      .col-8
        %p= page_entries_info @reports, entry_name: _('report')
    .table-responsive
      %table.table.table-sm.table-hover
        %thead
          %tr
            %th Status
            %th Options
            %th Requested
            %th
        %tbody.report-listing.warehouse-reports__completed
          - @reports.each do |report|
            %tr
              %td= report.status
              %th
                = render 'filters/report_parameters', options: report.options['filters'], report: report
              %td.text-nowrap
                = report.created_at
                .text-sm.text-muted by #{report.user&.name}
              %td
                - if report.completed?
                  = link_to project_pass_fail_warehouse_reports_project_pass_fail_path(report, format: :xlsx), class: 'btn btn-sm btn-secondary' do
                    View
              %td
                = link_to project_pass_fail_warehouse_reports_project_pass_fail_path(report), method: :delete, class: 'btn btn-sm btn-danger btn-icon-only', data: {confirm: "Are you sure you want to delete this report?"} do
                  %i.icon-cross

  - else
    %p.none-found
      No reports found.
