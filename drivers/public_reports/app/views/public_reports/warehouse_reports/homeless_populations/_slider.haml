.m-4
  .data-list-wrapper
    %input.jQuarters{ type: :range, min: 0, max: data.count - 1, value: 0, step: 1, data: { dates: data, selected: data.first }, list: :quarters}
    .data-list-markers.d-flex
      - data.each_with_index do |date, index|
        - marker_class = if index.zero? then 'first' elsif index == data.count - 1 then 'last' else '' end
        .data-list-marker-wrapper
          .data-list-marker
            .data-list-marker-mark-wrapper
              .data-list-marker-mark{class: marker_class}
            .text-center.w-100
            = date
:javascript
  $('.jQuarters').on('change', function(e) {
    var index = $(this).val();
    var selected_date = $(this).data('dates')[index]
    $(this).data('selected', $(this).data('dates')[index]);
    var charts = $('body').data('publicCharts');
    if(charts == undefined) {
      return;
    }

    $.each(charts, function(i){
      var chart = charts[i].chart;
      var dates = charts[i].dates;
      chart.load({ columns: dates[selected_date]['data']});
    });
  });
  $('.jQuarters').trigger('change');

:css
  input[type=range].jQuarters {
    width: 100%;
    margin: 2px 0;
    background-color: transparent;
    -webkit-appearance: none;
    border-radius: 50px;
  }
  input[type=range].jQuarters:focus {
    outline: none;
  }
  input[type=range].jQuarters::-webkit-slider-runnable-track {
    background: #e7eef4;
    border: 1px solid #cccccc;
    width: 100%;
    height: 16px;
    border-radius: 50px;
    cursor: pointer;
  }
  input[type=range].jQuarters::-webkit-slider-thumb {
    margin-top: -3px;
    width: 20px;
    height: 20px;
    background: #11427d;
    border: 0;
    border-radius: 50px;
    cursor: pointer;
    -webkit-appearance: none;
  }
  input[type=range].jQuarters:focus::-webkit-slider-runnable-track {
    background: #ffffff;
  }
  input[type=range].jQuarters::-moz-range-track {
    background: #e7eef4;
    border: 1px solid #cccccc;
    width: 100%;
    height: 16px;
    cursor: pointer;
  }
  input[type=range].jQuarters::-moz-range-thumb {
    width: 20px;
    height: 20px;
    background: #11427d;
    border: 0;
    border-radius: 50px;
    cursor: pointer;
  }
  input[type=range].jQuarters::-ms-track {
    background: transparent;
    border-color: transparent;
    border-width: 2px 0;
    color: transparent;
    width: 100%;
    height: 16px;
    cursor: pointer;
  }
  input[type=range].jQuarters::-ms-fill-lower {
    background: #c1d3e2;
    border: 1px solid #cccccc;
  }
  input[type=range].jQuarters::-ms-fill-upper {
    background: #e7eef4;
    border: 1px solid #cccccc;
  }
  input[type=range].jQuarters::-ms-thumb {
    width: 20px;
    height: 20px;
    background: #11427d;
    border: 0;
    border-radius: 50px;
    cursor: pointer;
    margin-top: 0px;
    /*Needed to keep the Edge thumb centred*/
  }
  input[type=range].jQuarters:focus::-ms-fill-lower {
    background: #e7eef4;
  }
  input[type=range].jQuarters:focus::-ms-fill-upper {
    background: #ffffff;
  }
  /*TODO: Use one of the selectors from https://stackoverflow.com/a/20541859/7077589 and figure out
  how to remove the virtical space around the range input in IE*/
  @supports (-ms-ime-align:auto) {
    /* Pre-Chromium Edge only styles, selector taken from hhttps://stackoverflow.com/a/32202953/7077589 */
    input[type=range].jQuarters {
      margin: 0;
      /*Edge starts the margin from the thumb, not the track as other browsers do*/
    }
  }
  .data-list-markers {
    justify-content: space-between;
  }
  .data-list-marker-wrapper {
    display: flex;
    align-items: end;
  }
  .data-list-marker-mark-wrapper {
    width: 100%;
  }
  .data-list-marker-mark {
    width: 2px;
    height: 10px;
    background-color: #CCC;
    margin: 0 auto;
  }
  .data-list-marker-mark.first {
    margin-left: 12%;
  }
  .data-list-marker-mark.last {
    margin-right: 12%;
  }
