- population = @report.populations.keys.detect { |k| k.to_s == params[:action] } || @report.populations.keys.first
- data = JSON.parse(@report.precalculated_data)
- population_data = data[population.to_s]
- title = @report.populations[population]
%h2.population-title= title
= render 'pit_chart', population: population, data: population_data['pit_chart']
= render 'slider', population: population, data: population_data['location_chart'].keys
= render 'location_chart', population: population, data: population_data['location_chart']
= debug population_data
