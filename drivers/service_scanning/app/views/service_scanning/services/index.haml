- content_for :title, 'Add Service'
.o-page
  .o-page__header.d-flex
    %h1= content_for :title
  .o-page__main-content.mt-3
    .row
      .col-sm-6
        - if @no_client_found
          = render 'no_client_found'
        = render 'form'
      .col-sm-6
        - if @search_results
          = render 'search_results'
        - else
          = render 'last_added'
        = render 'new_client'
= content_for :page_js do
  :javascript
    $('.exact_date_time_picker').datetimepicker(
      {
        sideBySide: true,
        stepping: 1,
        format: "MMM D, YYYY h:mm a",
        icons: {
          time: "icon icon-clock",
          date: "icon icon-calendar",
          up: "icon icon-arrow-up",
          down: "icon icon-arrow-down"
        }
      }
    );
