- if @pagy.count.positive?
  = render 'common/pagination_top', item_name: 'message'
  .table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th Subscriber
          %th Topic
          %th Scheduled
          %th Sent
      %tbody.report-listing.warehouse-reports__completed
        - @text_messages.each do |message|
          %tr
            %td= message.topic_subscriber.name

            %td= message.topic.title
            %td= message.send_on_or_after
            %td= message.sent_at
  = render 'common/pagination_bottom', item_name: 'message'
- else
  .none-found No messages queued.
