
= render 'common/pagination_top', item_name: 'export'
.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th Status
        %th Requested
        %th Options
        %th
    %tbody.report-listing.warehouse-reports__completed
      - @reports.each do |report|
        %tr
          %td
            = link_to_if(report.completed?, report.status, tx_client_reports_warehouse_reports_research_export_path(report))
          %td.text-nowrap
            = report.created_at
            .text-sm.text-muted by #{report.user&.name}
          %th= report.describe_filter_as_html
          %td
            = link_to tx_client_reports_warehouse_reports_research_export_path(report), method: :delete, class: 'btn btn-sm btn-danger btn-icon-only', data: {confirm: "Are you sure you want to delete this report?"} do
              %i.icon-cross
= render 'common/pagination_bottom', item_name: 'export'
